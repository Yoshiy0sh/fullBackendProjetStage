<% if (error){ %>
    <div>
        <label><%= error %></label>
    </div>
<% } %>

<% if(successMessage){ %>
        <div class="alert">
            <label><%= successMessage %></label>
        </div>
    <% } %>

<div>
    <h2>Edit User</h2>
    <a href="/edit">Modifier les informations personelles</a>
    <form action="edit?_method=PATCH" method="POST" enctype="multipart/form-data">
        <input type="text" name="name" value="<%=name%>">
        <input type="file" name="CNI">
        <button type="submit">Submit</button>
    </form>
    <form action="edit?_method=DELETE" method="POST">
        <button type="submit">Delete</button>
    </form>
</div>